switch (global.wave)
{
    case 1: global.time += 4;
    break;
    
    case 2: global.time += 5;
    break;
    
    case 3: global.time += 6;
    break;
    
    case 4: global.time += 7;
    break;
    
    case 5: global.time += 8;
    break;
    
    case 6: global.time += 9;
    break;
    
    case 7: global.time += 10;
    break;
    
    default: global.time += 11;
    break;
}
